{
  "name":      "@hackbg/ganesha",
  "version":   "1.0.0-beta",
  "private":   true,
  "workspace": true,
  "repository": {
    "type": "git",
    "url":  "https://github.com/hackbg/ganesha"
  },
  "main": "./vscode-client/out/extension",
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:typescript",
    "onLanguage:ts"
  ],
  "devDependencies": {
    "@types/node":     "latest",
    "@hackbg/komandi": "workspace:*",
    "tap":             "^15.0.9",
    "typescript":      "latest",
    "vite":            "^2.7.6",
    "vsce":            "latest"
  },
  "scripts": {
    "dev":     "node dev.js",
    "build":   "tsc -b tsconfig.build.json",
    "package": "vsce package --yarn",
    "watch":   "tsctens -b tsconfig.build.json -w"
  },
  "packages": [
    "./deps/toolbox/*",
    "./src/*",
    "./src/vsc/*",
    "./test"
  ],
  "engines": {
    "vscode": "^1.58.0"
  }
}
